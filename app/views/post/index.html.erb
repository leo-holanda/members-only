<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<% @posts.each do |post| %>
  <div class="ui raised card">
    <div class="content">
      <div class="header"><%= post.title %></div>
      <div class="description">
        <p><%= post.text %></p>
      </div>
    </div>
    <div class="extra content">
      <div class="right floated author">
        <% if logged_in? %>  
          <%= post.user.name %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= paginate @posts %>

