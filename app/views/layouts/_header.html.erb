<div class="ui secondary pointing menu">
  <div class="header item">Members Only</div>
  <% if logged_in? %>  
    <%= link_to "Posts", root_path, class: "active item" %>
    <%= link_to "Create Post", new_post_path, class: "item" %>	
    <%= link_to "Log out", logout_path, method: :delete, class: "item" %>
  <% else %>
    <%= link_to "Posts", root_path, class: "active item" %>
    <%= link_to "Login", login_path, class: "item" %>
    <%= link_to "Sign-up", signup_path, class: "item" %>
  <% end %>
</div>