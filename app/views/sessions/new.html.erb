<div class="ui middle aligned center aligned grid">
	<div class="left aligned three wide column">

		<h1 class="ui header">Sign-in</h1>
		
		<%= form_with scope: :session, url: login_path, class: 'ui large form', local: true do |f| %>
			<div class="ui stacked segment">

				<div class="field">
					<%= f.label :email %>
					<%= f.text_field :email %>
				</div>

				<div class="field">
					<%= f.label :password %>
					<%= f.text_field :password %>
				</div>

				<div class="ui checkbox">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me, 'Remember me on this computer'  %>
				</div>

				<div class="field">
					<%= f.submit "Sign-in", class: "ui fluid primary button" %>	
				</div>

			</div>
		<% end %>

	</div>
</div>