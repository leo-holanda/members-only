<h1>Sign-in</h1>
<div class="ui form">
		<%= form_with scope: :session, url: login_path, local: true do |form| %>
			<div class="field">
				<%= form.label :email %>
				<%= form.text_field :email %>
			</div>

			<div class="field">
				<%= form.label :password %>
				<%= form.text_field :password %>
			</div>

			<div class="inline field"
				<%= form.label :remember_me, class: "ui checkbox" do %>
					<%= form.check_box :remember_me, class: "hidden", tabindex: 0 %>
					<label>Remember me on this computer</label>
				<% end %>
			</div>
		
			<div class="field">
				<%= form.submit "Sign-in", class: "ui button" %>	
			</div>
		<% end %>
	</div>
</div>